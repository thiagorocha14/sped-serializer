{
    "name": "nfephp-org/sped-serializer",
    "type": "library",
    "description": "Serialiser XML",
    "keywords": ["xml", "sped", "nfephp"],
    "homepage": "https://github.com/nfephp-org/sped-serializer",
    "license": ["GPL-3.0+","LGPL-3.0+","MIT"],
    "authors": [
        {
            "name": "Roberto L. Machado",
            "email": "linux.rlm@gmail.com.br",
            "homepage": "http://www.nfephp.org",
            "role": "Developer"
        },
        {
            "name": "Comunidade NFePHP",
            "homepage": "https://github.com/nfephp-org/sped-serializer/graphs/contributors"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
          "NFePHP\\Serializer\\": "src/"
        } 
    },
    "autoload-dev": {
        "psr-4": {
            "NFePHP\\Serializer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.0-dev"
        }
    },
    "minimum-stability": "dev"
}
